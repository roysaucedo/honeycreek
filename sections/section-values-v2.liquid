{{ 'values-statement-v2.css' | asset_url | stylesheet_tag }}

{%- style -%}
.section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }


{%- endstyle -%}



<div class="values-statement-ctr section-{{ section.id }}-padding">
    <div class="values-statement-card">
      {% if section.settings.character_img  != blank %}
        <img class="absolute-certificate-character-img" src="{{ section.settings.character_img | image_url: height: 800 }}" width="200" height="auto" loading="lazy" alt="Lion">
      {% endif %}
        <img class="absolute-certificate-image-top-right" src="{{ section.settings.img_top_right | image_url: height: 800 }}" width="100%" height="auto" loading="lazy" alt="certificate decoration">
        
        <h2 class="rich-text__heading rte inline-richtext h1 scroll-trigger animate--slide-in">{{ section.settings.h1 }}</h2>
        <span class="rich-text__text rte scroll-trigger animate--slide-in">{{ section.settings.p }}</span>
        {% if section.settings.link != blank %}
        <a class="button button--primary" style="background: white; color: rgb(23,41,72);" href="{{ section.settings.link }}">{{ section.settings.btn_text }}</a>
        {% endif %}
    </div>
</div>


{% schema %}
{
  "name": "Values Statement V2",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "h1",
      "default": "Heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "p",
      "default": "<p>Add your paragraph here</p>",
      "label": "Add your paragraph here"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "img_top_right",
      "label": "Top right image"
    },
    {
      "type": "image_picker",
      "id": "character_img",
      "label": "Character Image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Values Statement V2"
    }
  ]
}
{% endschema %}
